{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Provider Reference",
  "description": "Schema for provider reference information",
  "type": "object",
  "required": [
    "provider_group_id",
    "provider_groups"
  ],
  "properties": {
    "provider_group_id": {
      "type": "string",
      "description": "Unique identifier for the provider group"
    },
    "provider_groups": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "npi"
        ],
        "properties": {
          "npi": {
            "type": "array",
            "items": {
              "type": "string",
              "pattern": "^[0-9]{10}$"
            },
            "description": "National Provider Identifier numbers (10 digits)"
          },
          "tin": {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "enum": [
                  "ein",
                  "npi"
                ]
              },
              "value": {
                "type": "string"
              }
            }
          }
        }
      }
    }
  }
}